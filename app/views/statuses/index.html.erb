<div class="page-header">

<h1>My Feed</h1>

</div>
   


<table>  
    <% @statuses.each do |status| %>
      <div class="status">
      <tr class="status">
        <strong><%= status.name %></strong>
        <p><%= status.content %></p>
           
        <td><%= link_to 'Show', status %></td>
        <td><%= link_to time_ago_in_words(status.created_at)+ " ago", status%></td>
        <td class="admin"><%= link_to 'Edit', edit_status_path(status) %></td>
          
        <td class="admin"><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>  </div> 
    <% end %>
 </table>  


<br>

<%= link_to 'New Status', new_status_path %>
